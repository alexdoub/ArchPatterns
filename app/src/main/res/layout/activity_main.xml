<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/params_and_saved_state_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Params And Saved State" />

        <Button
            android:id="@+id/saved_state_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved State" />

        <Button
            android:id="@+id/list_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List View (No DB)" />

        <Button
            android:id="@+id/list_view_with_db_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List View With DB" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>